# Clerk Authentication
CLERK_SECRET_KEY=your_clerk_secret_key_here
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Langfuse (Optional - for LLM observability)
LANGFUSE_SECRET_KEY=your_langfuse_secret_key_here
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key_here
LANGFUSE_HOST=https://cloud.langfuse.com

# Database URLs (automatically set in Docker)
REDIS_URL=redis://localhost:6379
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# Production Database Configuration (Railway)
# For production, these should be set to your Railway Neo4j service values:
# NEO4J_URI=bolt://railway-neo4j-service:7687
# NEO4J_USERNAME=neo4j
# NEO4J_PASSWORD=your-secure-production-password

# Migration Configuration (for migrating from Aura)
# AURA_NEO4J_URI=neo4j+s://your-aura-instance.databases.neo4j.io
# AURA_NEO4J_USERNAME=neo4j
# AURA_NEO4J_PASSWORD=your-aura-password
# RAILWAY_NEO4J_URI=bolt://your-railway-service:7687
# RAILWAY_NEO4J_USERNAME=neo4j
# RAILWAY_NEO4J_PASSWORD=your-railway-password

# API URL for frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Production Domain
PRODUCTION_DOMAIN=use-weave.app