{
  "name": "ai-rpg-manager",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:app\" \"npm run dev:marketing\"",
    "dev:app": "npm run dev --workspace=apps/app",
    "dev:marketing": "npm run dev --workspace=apps/marketing",
    "build": "npm run build --workspaces",
    "build:app": "npm run build --workspace=apps/app",
    "build:marketing": "npm run build --workspace=apps/marketing",
    "start": "npm run start --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces && cd backend && uv run black .",
    "format:check": "npm run format:check --workspaces && cd backend && uv run black --check .",
    "dev:proxy": "node scripts/dev-proxy.js",
    "docker:up": "docker-compose up",
    "docker:up:build": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:down:volumes": "docker-compose down -v",
    "docker:logs": "docker-compose logs -f",
    "docker:backend": "docker-compose up backend rq-worker redis neo4j",
    "docker:frontend": "docker-compose up app marketing",
    "docker:seed": "docker-compose run --rm seeder",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0"
  },
  "lint-staged": {
    "apps/app/**/*.{js,jsx,ts,tsx}": [
      "npm run lint --workspace=apps/app --",
      "npm run format --workspace=apps/app"
    ],
    "apps/marketing/**/*.{js,jsx,ts,tsx}": [
      "npm run lint --workspace=apps/marketing --",
      "npm run format --workspace=apps/marketing"
    ],
    "backend/**/*.py": [
      "cd backend && uv run black"
    ]
  }
}
